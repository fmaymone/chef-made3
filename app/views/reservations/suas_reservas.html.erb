<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">

			<li class="sidebar-item"><%= link_to "Seus Trabalhos", seus_trabalhos_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Suas Reservas", suas_reservas_path, class: "sidebar-link active" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Suas Reservas
			</div>
			<div class="panel-body">

				<% @trips.each do |trip| %>
					<div class="row">
						<div class="col-md-2">
							<%= trip.start_date.strftime('%d/%m/%Y') %>
						</div>
						<div class="col-md-6">
							<%= link_to menu_path(trip.reservable_id) do %>
								<%= image_tag trip.reservable.documents[0].image.url(:thumb) if trip.reservable.documents.length > 0 %>
							<% end %>
						</div>
						<div class="col-md-2">
							<%= link_to user_path(trip.reservable.user) do %>
								<%= image_tag avatar_url(trip.reservable.user), class: "img-circle avatar-medium" %>
							<% end %>
						</div>
						<div class="col-md-2 right">
							<h4>$<%= trip.price %></h4>
						</div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>