

<div class="row">
<%= render 'headerChef' %>
</div>

<%= render 'searchForm' %>

<%= render 'searchOptions' %>


<div class="text-center">
	<h2>Ache um Chef, próximo de você</h2>
	
</div>

<br>

<div class="row">
<% if @menus %>
	<% @menus.each do |menu| %>
		
		<!--<div class="col-md-4">-->
		<%= render partial: 'shared/chefs', locals: {user: menu.user} %>
		<!--</div>-->

	<% end %>
<% end %>	
</div>

<script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})


</script>
