<div id="wrapper">
	
<div id="sidebar">
		<div id="widget" class="sticky">

			<script src="https://maps.googleapis.com/maps/api/js"></script>
	    <script>
	      function initialize() {
	        var mapCanvas = document.getElementById('widget');
	        var mapOptions = {
	        	<% if @arrRooms.length > 0 %>
		          center: new google.maps.LatLng(<%= @arrRooms[0].latitude %>, <%= @arrRooms[0].longitude %>),
		        <% else %>  
		        	center: new google.maps.LatLng(44.5403, -78.5463),
		        <% end %>  
	          zoom: 14,
	          mapTypeId: google.maps.MapTypeId.ROADMAP
	        }
	        var map = new google.maps.Map(mapCanvas, mapOptions);
    <%  puts @arrRooms %>
	        <% @arrRooms.each do |room| %>	
	        console.log ("olar");
		        var marker = new google.maps.Marker({
		        	position: new google.maps.LatLng(<%= room.latitude %>, <%= room.longitude %>),
		        	title: "AirAlien" 
		        });

		        marker.setMap(map);
	        <% end %>
	      }
	      google.maps.event.addDomListener(window, 'load', initialize);
	    </script>
			
		</div>
	</div>

	<div id="article">
		
		<div class="row">
			
			<div class="col-md-12">

				<%= search_form_for @search, url: search_path do |f| %>
					
					<div class="row">
						<div class="col-md-3">
							<%= text_field_tag :start_date, params[:start_date], placeholder: "Data Inicial", class: "form-control" %>
						</div>
						<div class="col-md-3">
							<%= text_field_tag :end_date, params[:end_date], placeholder: "Data Final", class: "form-control" %>
						</div>
						<div class="col-md-3">
							<%= f.text_field :price_gteq, placeholder: "Preço Mínimo", class: "form-control" %>
						</div>
						<div class="col-md-3">
							<%= f.text_field :price_lteq, placeholder: "Preço Máximo", class: "form-control" %>
						</div>
					</div>

					<hr>

					<div class="row">
					
						<div class="col-md-4">
							<%= check_box_tag "q[room_type_eq_any][]", "Todo" %> Todo o Local
						</div>
						<div class="col-md-4">
							<%= check_box_tag "q[room_type_eq_any][]", "Privado" %> Privado
						</div>
						<div class="col-md-4">
							<%= check_box_tag "q[room_type_eq_any][]", "Compartilhado" %> Compartilhado
						</div>
					</div>

					<hr>

					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label>Capacidade</label>
								<%= f.select :accommodate_gteq,[["1-10",1], ["11-30",2], ["31-50",3], ["51-100",4], ["101-300",5], ["300+",6]], prompt: "Select...", class: "form-control" %>
							</div>
						</div>

						<div class="col-md-4">
							<div class="form-group">
								<label>Espaços</label>
								<%= f.select :accommodate_gteq, [["1",1], ["2",2], ["3",3], ["4+",4]], prompt: "Select...", class: "form-control" %>
							</div>
						</div>

						<div class="col-md-4">
							<div class="form-group">
								<label>Banheiros</label>
								<%= f.select :accommodate_gteq, [["1",1], ["2",2], ["3",3], ["4+",4]], prompt: "Select...", class: "form-control" %>
							</div>
						</div>
					</div>

					<hr>

					<div class="row">
						<div class="col-md-4">
							<%= check_box_tag "q[is_tv_eq]", true %> Telão
						</div>
						<div class="col-md-4">
							<%= check_box_tag "q[is_kitchen_eq]", true %> Cozinha Própria
						</div>
						<div class="col-md-4">
							<%= check_box_tag "q[is_internet_eq]", true %> Internet
						</div>
						<div class="col-md-4">
							<%= check_box_tag "q[is_heating_eq]", true %> Aquecimento
						</div>
						<div class="col-md-4">
							<%= check_box_tag "q[is_air_eq]", true %> Ar-Condicionado
						</div>
					</div>

					<br>

					<div class="row">
						<%= f.submit "Buscar", class: "btn btn-primary" %>
					</div>

				<% end %>

				<hr>

				<div class="row">
					<% @arrRooms.each do |room| %>
						
						<div class="col-md-6">
							<div class="panel panel-default">
								<div class="panel-heading preview">
									<%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
								</div>
								<div class="panel-body">
									<%= link_to room.listing_name, room %>
								</div>
							</div>
						</div>

					<% end %>
				</div>

			</div>


		</div>

	</div>

</div>

<script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})
</script>

<script>
	
	$(function(){ // document ready
 
	  if (!!$('.sticky').offset()) { // make sure ".sticky" element exists
	 
	    var stickyTop = $('.sticky').offset().top; // returns number 
	 
	    $(window).scroll(function(){ // scroll event
	 
	      var windowTop = $(window).scrollTop(); // returns number 
	 
	      if (stickyTop < windowTop){
	        $('.sticky').css({ position: 'fixed', top: 0 });
	      }
	      else {
	        $('.sticky').css('position','static');
	      }
	 
	    });
	 
	  }
	 
	});

</script>