<div class="panel panel-default">
	<div class="panel-heading">
		Crie seu Local de Eventos
	</div>
	<div class="panel-body">
		<div class="container">
			
			<%= form_for @room, :html => { multipart: true } do |f| %>

				<div class="row">
					<div class="col-md-4 select">
						<div class="form-group">
							<label>Tipo de Evento</label>
							<%= f.select :home_type, [["Jantar","Jantar"], ["Formatura","Formatura"], ["Casamento","Casamento"]], id: "home_type", prompt: "Escolha...", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Tipos de aluguel do Local</label>
							<%= f.select :room_type, [["Todo o Local","Todo"], ["Privado","Privado"], ["Compartilhado","Compartilhado"]],prompt: "Escolha...", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Capacidade</label>
							<%= f.select :accommodate, [["1-10",1], ["11-30",2], ["31-50",3], ["51-100",4], ["101-300",5], ["300+",6]], prompt: "Escolha...", class: "form-control" %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4 select">
						<div class="form-group">
							<label>Espaços</label>
							<%= f.select :bed_room, [["1",1], ["2",2], ["3",3], ["4+",4]], prompt: "Escolha...", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Banheiros</label>
							<%= f.select :bath_room, [["1",1], ["2",2], ["3",3], ["4+",4]], prompt: "Escolha...", class: "form-control" %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Nome a ser Exibido</label>
						<%= f.text_field :listing_name, placeholder: "Seja claro e descritivo", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Resumo</label>
						<%= f.text_area :summary, rows: 5, placeholder: "Fale sobre seu local", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Endereço</label>
						<%= f.text_field :address, placeholder: "Onde fica o local?", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<%= f.check_box :is_tv %> Telão
						</div>
						<div class="form-group">
							<%= f.check_box :is_kitchen %> Cozinha Própria
						</div>
						<div class="form-group">
							<%= f.check_box :is_internet %> Internet
						</div>
					</div>

					<div class="col-md-4">
						<div class="form-group">
							<%= f.check_box :is_heating %> Aquecimento
						</div>
						<div class="form-group">
							<%= f.check_box :is_air %> Ar-Condicionado
						</div>
					</div>	
				</div>	

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>Preço por Dia</label>
							<div class="input-group">
								<div class="input-group-addon">$</div>
								<%= f.text_field :price, placeholder: "eg. $100", class: "form-control" %>
							</div>	
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">							
							<span class="btn btn-default btn-file">
							    <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos 
							    <%= file_field_tag "images[]", type: :file, multiple: true %>
							</span>
						</div>		
					</div>
				</div>

				<div id="photos"><%= render 'photos/list' %></div>

				<div class="row">
					<div class="form-group">
						<%= f.check_box :active %> Ativo
					</div>
				</div>

				<div class="actions">
					<%= f.submit "Salvar", class: "btn btn-primary" %>
				</div>

			<% end %>

		</div>
	</div>
</div>