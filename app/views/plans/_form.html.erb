<%= form_for(@plan, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @plan.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h4>

      <ul>
      <% @plan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Título", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :kind, "Tipo: 0-Básico | 1-Profissional" , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :kind, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, "Descrição", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :value, "Valor Mensal do Plano", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :value, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
