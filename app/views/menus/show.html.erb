<div class="panel panel-default">
	<div class="panel-body">
		
		<!-- Image -->
		<div class="row">
			<div class="col-md-12">
				<%= image_tag @documents[0].image.url(), class: "img-responsive" if @documents.length > 0 %>
			</div>
		</div>

		<br>

		<!-- Main Info -->
		<div class="row">
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-3 text-center">
						<%= image_tag avatar_url(@menu.user), class: "img-circle avatar-large" %><br><br>
						<%= @menu.user.fullname %>
					</div>

					<div class="col-md-9">
						<h4><%= @menu.title %></h4>
						
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<!-- Reservation form -->
				<%= render partial: 'reservations/form',
           locals: {reservable: @menu} %>
				
			</div>
		</div>

		<!-- About -->
		<div class="row">
			<div class="col-md-12">
				<h2>Sobre o Menu</h2>
				<p><%= @menu.description %></p>
			</div>
		</div>

		<!-- Entry -->
		<div class="row">
			<div class="col-md-12">
				<h4>Entrada</h4>
				<p><%= @menu.entrada %></p>
			</div>
		</div>
		<!-- Main -->
		<div class="row">
			<div class="col-md-12">
				<h4>Principal</h4>
				<p><%= @menu.principal %></p>
			</div>
		</div>
		<!-- desert -->
		<div class="row">
			<div class="col-md-12">
				<h4>Sobremesa</h4>
				<p><%= @menu.sobremesa %></p>
			</div>
		</div>


		<!-- Carousel -->
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
				  
					<% if @documents %>
						<!-- Indicators -->
				    <ol class="carousel-indicators">
							<% @documents.each do |photo| %>
								<li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
							<% end %>	
						</ol>				
					<% end %>     

				  <div class="carousel-inner" role="listbox">
				    <% if @documents %>				
							<% @documents.each do |photo| %>
								<div class="item <%= 'active' if photo.id == @documents[0].id %>">          
				          <%= image_tag photo.image.url() %>
				        </div>
							<% end %>	
						<% end %>
				  </div>

				  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
			</div>
		</div>

		<br>
		<hr>
		<!-- Reviews -->
		<!--<div class="row">-->
		<!--	<div class="col-md-12">-->
		<!--		<h3>Reviews <span id="average_rating"></span> 
		<!--		<div class="container">-->
		<!--			<div>-->
		<!--			
		<!--			</div>-->
		<!--			<div>-->
		<!--				
		<!--			</div>-->
		<!--		</div>-->
		<!--	</div>-->
		<!--</div>-->
		<!-- Google Map -->
		<div class="row">
			<div class="col-md-12">
				
				<div id="map"></div>

				<style>
		      #map {
		        width: 100%;
		        height: 400px;
		      }
		    </style>

		    <script src="https://maps.googleapis.com/maps/api/js"></script>
		    <script>
		      function initialize() {
		        var mapCanvas = document.getElementById('map');
		        var mapOptions = {
		          center: new google.maps.LatLng(<%= @menu.user.latitude %>, <%= @menu.user.longitude %>),
		          zoom: 14,
		          mapTypeId: google.maps.MapTypeId.ROADMAP
		        }
		        var map = new google.maps.Map(mapCanvas, mapOptions);

		        var marker = new google.maps.Marker({
		        	position: new google.maps.LatLng(<%= @menu.user.latitude %>, <%= @menu.user.longitude %>),
		        	title: "Chef-Made" 
		        });

		        marker.setMap(map);
		      }
		      google.maps.event.addDomListener(window, 'load', initialize);
		    </script>


			</div>
		</div>

		<!-- Close by Menus -->
		<h3>Chefs Próximos </h3>
		<div class="row">
			<% for user in @menu.user.nearbys(10) %>
				
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading preview">
							
							<%= link_to image_tag(user.image), user %>
							
							
						</div>
						<div class="panel-body">
							<%= link_to user.fullname, user %><br>
							(<%= user.distance.round(2) %> quilômetros)
						</div>
					</div>
				</div>

			<% end %>
		</div>


	</div>
</div>
